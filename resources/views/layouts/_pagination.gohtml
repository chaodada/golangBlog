{{ define "pagination" }}

  {{ if .HasPages }}
    <nav class="blog-pagination mb-5">

      {{ if .HasPrev }}
        <a class="btn btn-outline-primary btn-block" href="{{ .Prev.URL }}" tabindex="-1" aria-disabled="true">上一页</a>
      {{ else }}
        <a class="btn btn-outline-secondary btn-block  disabled" href="#" tabindex="-1" aria-disabled="true">上一页</a>
      {{ end }}

      {{ if .HasNext }}
        <a class="btn btn-outline-primary btn-block " href="{{ .Next.URL }}" tabindex="-1" aria-disabled="true">下一页</a>
      {{ else }}
        <a class="btn btn-outline-secondary btn-block disabled" href="#" tabindex="-1" aria-disabled="true">下一页</a>
      {{ end }}

    </nav>
  {{ end }}

{{ end }}